<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bigscreen.mylibsrepository.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.bigscreen.iconictabbar.view.IconicTabBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barBackground="@color/white"
        app:tabDefaultColor="@color/textColor"
        app:tabFromMenu="@menu/menu_bottom_bar"
        app:tabSelectedColor="@color/colorPrimary" />

</LinearLayout>
