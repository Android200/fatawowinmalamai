<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fatawa_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bigscreen.fatawowinmalamai.FatawaDetailActivity"
    tools:showIn="@layout/activity_fatawa_detail">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/item_bg"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/sunanTambaya"
                style="@style/tweetName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fatawowi"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/jawabinTambaya"
                android:paddingLeft="@dimen/dp_10"
                style="@style/tweetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fatawowi"
                android:textColor="@android:color/black"
                android:layout_below="@+id/sunanTambaya"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/lokacinTambaya"
                style="@style/tweetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fatawowi"
                android:layout_alignEnd="@+id/jawabinTambaya"
                android:layout_alignRight="@+id/jawabinTambaya"
                android:layout_alignBottom="@+id/jawabinTambaya"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/amsa"
                android:paddingLeft="@dimen/dp_10"
                style="@style/tweetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amsa"
                android:textColor="@android:color/black"
                android:layout_below="@+id/lokacinTambaya"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/jawabinMalami"
                android:paddingLeft="@dimen/dp_10"
                style="@style/tweetText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fatawowi"
                android:textColor="@android:color/black"
                android:layout_below="@+id/amsa"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/sunanMalami"
                style="@style/tweetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fatawowi"
                android:layout_alignEnd="@+id/jawabinMalami"
                android:layout_alignRight="@+id/jawabinMalami"
                android:layout_alignBottom="@+id/jawabinMalami"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
